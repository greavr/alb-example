# Create VPC
# ----------------------------------------------------------------------------------------------------------------------
module "vpc" {
    source = "./modules/vpc"
    region = var.region
    environment = var.environment
}

# ----------------------------------------------------------------------------------------------------------------------
# Create S3 Bucket
# ----------------------------------------------------------------------------------------------------------------------
module "s3" {
    source = "./modules/s3"
    environment = var.environment
}

# ----------------------------------------------------------------------------------------------------------------------
# Create ECS
# ----------------------------------------------------------------------------------------------------------------------
module "ecs" {
    source = "./modules/ecs"
    environment = var.environment
    containers = var.containers

}
